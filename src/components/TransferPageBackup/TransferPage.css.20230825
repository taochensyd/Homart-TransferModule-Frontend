.form-container {
    display: flex;
    flex-direction: column;
    max-width: 500px;
    margin: 0 auto;
}

.input-group {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 10px 0;
}

.input-group label {
    flex: 1;
    margin-right: 10px;
}

.input-group input,
.input-group select,
.input-group textarea {
    flex: 2;
}

.input-group button {
    margin-left: 10px;
}

.input-group span {
    margin-left: 10px;
}
